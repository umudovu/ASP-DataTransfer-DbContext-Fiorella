@model List<Product>


@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}


<div class="page-breadcrumb">
          <div class="row">
            <div class="col-12 d-flex no-block align-items-center">
              <h4 class="page-title">Dashboard</h4>
              <div class="ms-auto text-end">
                <nav aria-label="breadcrumb">
                  <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active" aria-current="page">
                      Products
                    </li>
                  </ol>
                </nav>
              </div>
            </div>
          </div>
        </div>



 <div class="container-fluid">
    <div class="row">

        <div class="card">
        <div class="card-body">
          <h5 class="card-title">Products</h5>
          <a  class="my-2 btn btn-outline-success" 
          asp-action="create">
               <i style="font-size:10px" class="mdi mdi-creation"></i> Create Products
          </a>

         

          <div class="table-responsive">
            <table
              id="zero_config2"
              class="table table-striped table-bordered"
            >
              <thead>
                <tr>
                  <th>No</th>
                  <th>Image</th>
                  <th>Name</th>
                  <th>Price</th>
                  <th>Count</th>
                  <th>Category</th>
                  <th>Settings</th>
                </tr>
              </thead>
              <tbody>
                @foreach (var item in Model)
               {
                    count++;

                   <tr>
                      <td>@count</td>
                      <td>
                          <img width="50" height="50" style="border-radius:100%;" src="~/img/@item.ImgUrl">
                      </td>
                      <td>@item.Name</td>
                      <td>@item.Price</td>
                      <td>@item.Count</td>
                      <td>@item.Category.Name</td>
                      <td >
                      
                         <a  asp-action="detail" asp-route-id="@item.Id" class="btn btn-outline-info">
                              <i style="font-size:10px" class="mdi mdi-information-variant"></i>
                         </a>
                         <a  asp-action="update" asp-route-id="@item.Id" class="btn btn-outline-warning">
                              <i style="font-size:10px" class="mdi mdi-table-edit"></i>
                         </a>
                         <a 
                              asp-action="delete" asp-route-id="@item.Id" 
                             class="btn btn-outline-danger">
                              <i style="font-size:10px" class="mdi mdi-playlist-remove"></i>
                         </a>
                      
                      </td>
                  </tr>
                       
                    }
                
              </tbody>
              <tfoot>
               @* <tr>
                  <th>No</th>
                  <th>Name</th>
                  <th>Description</th>
                  <th>Settings</th>
                </tr>*@
              </tfoot>
            </table>
          </div>
        </div>
      </div>


    </div>
   </div>



                      @section Scripts{
                          <script src="~/admin/assets/extra-libs/DataTables/datatables.min.js"></script>
                          <script>
                          /****************************************
                           *       Basic Table                   *
                           ****************************************/
                          $("#zero_config2").DataTable();
                        </script>
                      }