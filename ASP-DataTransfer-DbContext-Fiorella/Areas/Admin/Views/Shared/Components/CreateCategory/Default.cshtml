
@model Category



                                 <div class="card">
                                    <form class="form-horizontal" method="post" asp-controller="category" asp-action="create">
                                      <div class="card-body">
                                        
                                        <div class="form-group row">
                                          <label
                                            asp-for="Name"
                                            class="col-sm-3 text-end control-label col-form-label"
                                            ></label>
                                         
                                          <div class="col-sm-9">
                                            <input
                                              type="text"
                                              class="form-control"
                                              asp-for="Name"
                                              placeholder="Category name"
                                            />
                                            <span class="badge bg-warning" asp-validation-for="Name"></span>
                                          </div>
                                          
                                        </div>
                                        <div class="form-group row">
                                          <label
                                            asp-for="Description"
                                            class="col-sm-3 text-end control-label col-form-label"
                                            ></label>

                                          <div class="col-sm-9">
                                            <textarea asp-for="Description" class="form-control" style="height: 100px"></textarea>
                                            <span class="badge bg-warning" asp-validation-for="Description"></span>
                                          </div>
                                         
                                        </div>
                                      </div>
                                      <div class="border-top">
                                        <div class="card-body d-flex justify-content-end">
                                          <button type="button" class="mx-4 btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                          <button  type="submit"   class="btn btn-primary">Save changes</button>
                                        </div>
                                      </div>
                                       
                                    </form>
                                </div>