@model List<Category>


@{
    ViewData["Title"] = "Category";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    int count = 1;
}


 <div class="page-breadcrumb">
          <div class="row">
            <div class="col-12 d-flex no-block align-items-center">
              <h4 class="page-title">Dashboard</h4>
              <div class="ms-auto text-end">
                <nav aria-label="breadcrumb">
                  <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active" aria-current="page">
                      Category
                    </li>
                  </ol>
                </nav>
              </div>
            </div>
          </div>
        </div>


        <div class="container-fluid">
            <div class="row">

                <div class="card">
                <div class="card-body">
                  <h5 class="card-title">Categories</h5>
                  <a  class="my-2 btn btn-outline-success" 
                  data-bs-toggle="modal" data-bs-target="#add-categry">
                       <i style="font-size:10px" class="mdi mdi-creation"></i> Add Category
                  </a>

                  <!-- Modal -->
                        <div class="modal fade" id="add-categry" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                          <div class="modal-dialog">
                            <div class="modal-content">
                              <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalLabel">New Category</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                              </div>
                              <div class="modal-body">

                                     @await Component.InvokeAsync("CreateCategory")

                              </div>
                              <div class="modal-footer">
                              </div>
                            </div>
                          </div>
                        </div>
                  <!-- Modal end -->

                  <div class="table-responsive">
                    <table
                      id="zero_config"
                      class="table table-striped table-bordered"
                    >
                      <thead>
                        <tr>
                          <th class="col-1">No</th>
                          <th class="col-2">Name</th>
                          <th class="col-7">Description</th>
                          <th class="col-3">Settings</th>
                        </tr>
                      </thead>
                      <tbody>
                        @foreach (var item in Model)
                       {
                           <tr>
                              <td>@count</td>
                              <td>@item.Name</td>
                              <td>@item.Description</td>
                              <td >
                              
                                       <a asp-route-id="@item.Id" class="btn btn-outline-info">
                                            <i style="font-size:10px" class="mdi mdi-information-variant"></i>
                                       </a>
                                       <a asp-route-id="@item.Id" class="btn btn-outline-warning">
                                            <i style="font-size:10px" class="mdi mdi-table-edit"></i>
                                       </a>
                                       <a asp-controller="category" asp-action="remove" asp-route-id="@item.Id" class="btn btn-outline-danger">
                                            <i style="font-size:10px" class="mdi mdi-playlist-remove"></i>
                                       </a>
                              
                              </td>
                          </tr>
                                count++;
                            }
                        
                      </tbody>
                      <tfoot>
                       @* <tr>
                          <th>No</th>
                          <th>Name</th>
                          <th>Description</th>
                          <th>Settings</th>
                        </tr>*@
                      </tfoot>
                    </table>
                  </div>
                </div>
              </div>


             </div>
        </div>


       
    

