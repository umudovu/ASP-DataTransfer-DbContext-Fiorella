@model List<Product>
@{
    ViewData["Title"] = "Index";

}

 <section id="products">
            <div class="container">
                <div id="products-list" class="row">
                    <input id="product-count" type="hidden" value="@ViewBag.productCount" />
                   @foreach (var item in Model)
                  {
                       <div class="col-sm-6 col-md-4 col-lg-3 mt-3">
                        <div class="product-item text-center" data-id="@item.Category.Name.ToLower()">
                            <div class="img">
                                <a asp-controller="product" asp-action="index">
                                    <img src="img/@item.ImgUrl" class="img-fluid" alt="">
                                </a>
                            </div>
                            <div class="title mt-3">
                                <h6>@item.Name</h6>
                            </div>
                            <div class="price">
                                <span class="text-black-50">Add to cart</span>
                                <span class="text-black-50">$@item.Price</span>
                            </div>
                        </div>
                    </div>
                  }
                   
                </div>
                
                     <div class="row d-flex justify-content-center text-center align-items-center">
                         <button id="loadMore" class="btn btn-outline-primary mx-4 my-5">Load More</button>
                    </div>
           
            </div>
        </section>
